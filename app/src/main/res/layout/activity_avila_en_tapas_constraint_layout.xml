<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ut01.avilaEnTapasConstraintLayout.AvilaEnTapasConstraintLayout">


    <!-- Product picture -->
    <ImageView

        android:id="@+id/product_picture"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/black"
        android:src="@drawable/img"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Reward wrapper-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/reward_wrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Reward position -->
        <TextView
            android:id="@+id/reward_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1º"
            android:textColor="@color/red"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Reward picture -->
        <ImageView
            android:id="@+id/reward_picture"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:src="@drawable/reward"
            app:tint="@color/red"
            app:layout_constraintStart_toEndOf="@id/reward_position"
            app:layout_constraintBottom_toBottomOf="@id/reward_position"
            app:layout_constraintTop_toTopOf="@id/reward_position"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Product name -->
    <TextView
        android:id="@+id/product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Albóndiga de faisán en escabeche con caldo clarificado de gambón salvaje"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/product_picture"/>

    <!-- Restaurant name -->
    <TextView
        android:id="@+id/restaurant_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restaurante Soul Kitchen"
        android:textSize="16sp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/product_name"
        app:layout_constraintStart_toStartOf="@id/product_name"/>

    <!-- Score text -->
    <TextView
        android:id="@+id/score_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total: 0 Pts. Media: 0.0"
        android:textSize="16sp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/restaurant_name"
        app:layout_constraintStart_toStartOf="@id/product_name"/>

    <!-- Score picture -->
    <ImageView
        android:id="@+id/score_picture"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/star_rate"
        android:layout_marginStart="5dp"
        app:tint="@color/yellow"
        app:layout_constraintStart_toEndOf="@id/score_text"
        app:layout_constraintBottom_toBottomOf="@id/score_text"
        app:layout_constraintTop_toTopOf="@id/score_text"/>

    <!-- Share picture -->
    <ImageView
        android:id="@+id/share_picture"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/share"
        android:layout_marginEnd="8dp"
        app:tint="@color/red"
        app:layout_constraintEnd_toStartOf="@id/favorite_picture"
        app:layout_constraintBottom_toBottomOf="@id/score_text"
        app:layout_constraintTop_toTopOf="@id/score_text"/>

    <!-- Favorite picture -->
    <ImageView
        android:id="@+id/favorite_picture"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/favorite"
        app:tint="@color/red"
        app:layout_constraintEnd_toEndOf="@id/product_name"
        app:layout_constraintBottom_toBottomOf="@id/score_text"
        app:layout_constraintTop_toTopOf="@id/score_text"/>


</androidx.constraintlayout.widget.ConstraintLayout>