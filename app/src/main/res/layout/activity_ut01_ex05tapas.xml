<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ut01.ex05Tapas.presentation.Ut01Ex05Activity"
    android:background="@android:drawable/dialog_holo_light_frame"
    android:padding="8dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:background="@color/gray">

        <!-- Product photo -->
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/product_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/tapa"/>


        <!-- Reward wrapper -->
        <!--android:background="@color/white_75"-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="15dp"
            android:background="@drawable/rounded_corners_reward">

            <!-- Place Reward-->
            <TextView
                android:id="@+id/place_reward"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="@color/red"
                android:text="1º"/>

            <!-- Reward icon -->
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/reward_icon"
                android:layout_width="18dp"
                android:layout_height="match_parent"
                android:layout_toEndOf="@id/place_reward"
                android:scaleType="centerInside"
                android:tint="@color/red"
                android:src="@drawable/cup"/>

        </RelativeLayout>

        <!-- Food Info Wrapper -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp">


            <!-- Place Reward-->
            <TextView
                android:id="@+id/food_info"
                android:layout_width="90dp"
                android:layout_height="wrap_content"

                android:maxHeight="100dp"
                android:textSize="8sp"
                android:gravity="center"
                android:textColor="@color/black"
                android:padding="5dp"
                android:background="@drawable/rounded_corners_info_food"
                tools:text="@tools:sample/lorem/random"/>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <!-- Product name -->
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="10dp"
            android:textSize="20sp"
            android:text="Albóndiga de faisán en escabeche con caldo clarificado de gambón salvaje"/>

        <!-- Place -->
        <TextView
            android:id="@+id/place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginBottom="5dp"
            android:textSize="15sp"
            android:text="Restaurante Soul Kitchen"/>


        <!-- Score and Share Toolbar -->
        <RelativeLayout
            android:id="@+id/score_toolbar"
            android:layout_below="@id/place"
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <!-- Total score -->
            <TextView
                android:id="@+id/total_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="15sp"
                android:layout_alignParentStart="true"
                android:text="Total: "/>

            <TextView
                android:id="@+id/total_score"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_toEndOf="@id/total_text"
                android:textSize="15sp"
                android:text="0"/>

            <!-- Media score -->
            <TextView
                android:id="@+id/media_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_toEndOf="@id/total_score"
                android:textSize="15sp"
                android:text=" Pts. Media: "/>

            <TextView
                android:id="@+id/media_score"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_toEndOf="@id/media_text"
                android:textSize="15sp"
                android:text="0.0"/>

            <!-- Score icon -->
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/score_icon"
                android:layout_width="18dp"
                android:layout_height="match_parent"
                android:layout_toEndOf="@id/media_score"
                android:tint="@color/yellow"
                android:scaleType="centerInside"
                android:layout_marginStart="5dp"
                android:src="@drawable/star_rate"/>

            <!-- Favorite icon -->
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/favorite_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:tint="@color/red"
                android:src="@drawable/favorite"/>

            <!-- Share icon -->
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/share_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toStartOf="@id/favorite_icon"
                android:tint="@color/red"
                android:src="@drawable/share"/>

        </RelativeLayout>


    </RelativeLayout>

</LinearLayout>